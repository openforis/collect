<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	alpha.disabled="0.5">
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var upImage:Class;
			[Bindable]
			public var overImage:Class;
			[Bindable]
			public var downImage:Class;
			[Bindable]
			public var disabledImage:Class;
		]]>        
	</fx:Script>
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- Skin -->
	
	<!-- background -->
	<s:Image left="0" top="0" right="0" bottom="0"
			source.up="{upImage}"
			source.over="{overImage}"
			source.down="{downImage}"
			source.disabled="{disabledImage}"
		   />
	
	<s:Label id="labelDisplay"
			 textAlign="center"
			 verticalAlign="middle"
			 lineBreak="toFit"
			 horizontalCenter="0" verticalCenter="1"
			 left="10" right="10" top="2" bottom="2"
			 fontWeight="bold"
			 color.up="#555555" color.over="#00AA00">
	</s:Label>
	
</s:SparkSkin>