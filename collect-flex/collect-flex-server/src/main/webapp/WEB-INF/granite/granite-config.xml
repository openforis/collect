<granite-config scan="true">
    <amf3-deserializer-securizer param="
	    org\.granite\..* |
	    flex\.messaging\..* |
	    test\.granite\.ejb3\.entity\..*
	  "/>
   <!--
    ! Used to get persistent class from HibernateProxy.
    !-->
    
<!--     <classgetter type="org.granite.hibernate.HibernateClassGetter"/> -->
   <!--
    ! Use HibernateExternalizer to externalize all instances of classes annotated
    ! with @Entity or @MappedSuperclass, and DefaultExternalizer for those
    ! annotated with @Embeddable.
    !-->
    <externalizers>
        <externalizer type="org.granite.hibernate.HibernateExternalizer">
            <include annotated-with="javax.persistence.Entity"/>
            <include annotated-with="javax.persistence.MappedSuperclass"/>
            <include annotated-with="javax.persistence.Embeddable"/>
        </externalizer>
        <externalizer type="org.granite.messaging.amf.io.util.externalizer.DefaultExternalizer">
        	<include instance-of="org.openforis.idm.model.*" />
        	<include instance-of="org.openforis.idm.metamodel.*" />
        </externalizer>
    </externalizers>
  
	  <security
	    type="org.granite.messaging.service.security.TomcatSecurityService"/>
	
	
</granite-config>