	<!-- Reference data -->
	<!--~~~~~~~~~~~~~~~ -->
	<xs:complexType name="referenceDataAttribute">
		<xs:attribute name="name" use="required" type="name" />
		<xs:attribute name="key" type="xs:boolean" />
	</xs:complexType>
	
</xs:schema>
